<Window x:Class="SpeechTranslatorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechTranslatorDesktop"
        xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <!-- https://learn.microsoft.com/ja-jp/dotnet/desktop/wpf/data/how-to-bind-to-an-enumeration?view=netdesktop-8.0 -->
        <ObjectDataProvider x:Key="LanguageDataSource"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:Languages"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Button Content="Translate"
                    Width="100"
                    Margin="0,0,20,0"
                    Command="{local:Invoke Translate}"/>

            <Label Content="Speaker"/>

            <!--<ComboBox x:Name="speakerComboBox"
                      Width="120"
                      Margin="0,0,20,0"
                      ItemsSource="{Binding Speakers}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="DisplayValue"
                      SelectedItem="{Binding SelectedSpeaker}"/>-->
            <ComboBox Width="120"
                      Margin="0,0,20,0"
                      ItemsSource="{Binding Source={StaticResource LanguageDataSource}}"
                      SelectedItem="{Binding Speaker.Value}"/>

            <Label Content="Translation"/>

            <!--<ComboBox x:Name="translateComboBox"
                      Width="120"
                      Margin="0,0,20,0"
                      ItemsSource="{Binding Translations}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="DisplayValue"
                      SelectedItem="{Binding SelectedTranslation}"/>-->
            <ComboBox Width="120"
                      Margin="0,0,20,0"
                      ItemsSource="{Binding Source={StaticResource LanguageDataSource}}"
                      SelectedItem="{Binding Translation.Value}"/>
        </StackPanel>
    </StackPanel>
</Window>
